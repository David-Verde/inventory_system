<%# app/views/transferencias/new.html.erb %>
<h1>Transferir Artículo</h1>

<p>
  <strong>Artículo:</strong>
  <%= @articulo.modelo.nombre %> (<%= @articulo.modelo.marca.nombre %>)
</p>

<p>
  <strong>Portador Actual:</strong>
  <%= @articulo.persona&.nombre_completo || "Sin portador" %>
</p>

<%= form_with(model: [@articulo, @transferencia]) do |form| %>
  <% if @transferencia.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@transferencia.errors.count, "error") %> impidieron esta transferencia:</h2>
      <ul>
        <% @transferencia.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :persona_id, "Nuevo Portador", style: "display: block" %>
    <%= form.collection_select :persona_id, @personas, :id, :nombre_completo, { prompt: "Seleccione una persona" } %>
  </div>

  <div>
    <%= form.submit "Confirmar Transferencia" %>
  </div>
<% end %>

<%= link_to "Volver al artículo", @articulo %>