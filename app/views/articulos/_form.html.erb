<%= form_with(model: articulo, class: "space-y-6") do |form| %>
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= articulo.new_record? ? "Nuevo Artículo" : "Editando Artículo" %></h1>

  <div>
    <%= form.label :fecha_ingreso, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.date_field :fecha_ingreso, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>
  
  <div>
    <%= form.label :modelo_id, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.collection_select :modelo_id, Modelo.all.includes(:marca).order('marcas.nombre, modelos.nombre'), :id, ->(m) { "#{m.marca.nombre} #{m.nombre}" }, { prompt: "Seleccione un modelo" }, { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>
  </div>

  <div>
    <%= form.label :persona_id, "Portador", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.collection_select :persona_id, Persona.all, :id, :nombre_completo, { prompt: "Seleccione un portador (opcional)" }, { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" } %>
  </div>

  <div class="flex items-center space-x-4">
    <%= form.submit class: "cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    <% if articulo.persisted? %>
      <%= link_to "Volver", articulo, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    <% else %>
      <%= link_to "Volver", articulos_path, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    <% end %>
  </div>
<% end %>